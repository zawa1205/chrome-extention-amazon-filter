{   
    "short_name": "Ama Filter",
    "name": "Amazon Search Filter",
    "manifest_version": 2,
    "description": "検索時に別タブで&emi=AN1VRQENFRJN5をつけた結果を開きます",
    "version": "0.0.1",
    "icons": { "128": "image/icon128.png" },
    "page_action": {
        "default_popup": "index.html",
        "default_title": "Amazon Search Filter"
    },
    "content_scripts": [
    {
        "matches": [ "https://www.amazon.co.jp/*" ],
        "js": [ "js/content.js" ]
    }
    ]
}